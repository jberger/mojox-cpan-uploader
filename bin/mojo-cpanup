#!/usr/bin/perl 

# Copyright (C) 2010, Yaroslav Korshak.

use strict;
use warnings;

require MojoX::CPAN::Uploader;
use Term::ReadKey;

use Getopt::Long;

GetOptions(
    'user=s' => \my($user),
    'pass=s' => \my($pass)
);

my ($file, $subdir) = @ARGV;

usage() unless $file;

die "No such file '$file'" unless -f $file;

unless (defined $user) {
    while (!$user) {
        print "Username: ";
        $user = <STDIN>;
        chomp($user);
    }
}

unless (defined $pass) {
    ReadMode 2;
    while (!$pass) {
        print "Password: ";
        $pass = <STDIN>;
        chomp($pass);
    }
    ReadMode 0;
}

my $up = MojoX::CPAN::Uploader->new;

my $result = $up->auth($user, $pass)->upload($file, $subdir);

exit;

sub usage {
    print <<END;
Usage:
    $0 --user=username --pass=password package.tar.gz subdir
    $0 --user=username --pass=password package.tar.gz 
    $0 --user=username package.tar.gz
    $0 package.tar.gz
END
    exit;
}

1;
